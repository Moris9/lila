#!/bin/sh
. bin/lilarc

URL=$PROD_URL
TIMEOUT=5 # Restart if it takes longer than that
DELAY=20 # Check every delay
MSG="Connect to $URL in less than $TIMEOUT seconds"

lilalog "Start timeout restarter"

while true; do

  sleep $DELAY

  curl $URL --max-time $TIMEOUT -so /dev/null

  if [ $? = 0 ]; then
    echo -n "."
  else
    lilalog "FAIL $MSG"
    bin/prod/restart
  fi

done
