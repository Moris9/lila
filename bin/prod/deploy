#!/bin/sh
. bin/lilarc

fail () {
  echo "Deploy main or ai"
  exit 1
}

if [ -z $1 ]; then
  fail
elif [ $1 = "main" ]; then
  REMOTE="hollie"
  REMOTE_DIR="/home/lila4"
elif [ $1 = "ai" ]; then
  REMOTE="paul"
  REMOTE_DIR="/home/lila4"
elif [ $1 = "local" ]; then
  REMOTE="localhost"
  REMOTE_DIR="/tmp/lila4"
else
  fail
fi

lilalog "Deploy to $1 server $REMOTE:$REMOTE_DIR"

APP_NAME=lila-4.0

if [ $1 != "ai" ]; then
  bin/closure
fi

bin/play compile stage
if [ $? != 0 ]; then
  lilalog "Deploy canceled"
  exit 1
fi

RSYNC_OPTIONS=" \
  --archive \
  --force \
  --delete \
  --progress \
  --compress \
  --checksum \
  --exclude application.conf \
  --exclude logs \
  --exclude RUNNING_PID \
  --exclude bin/.translate_version
  --exclude target/resolution-cache
  --exclude target/native_libraries
  --exclude target/scala-*
  --exclude target/streams";

lilalog "Rsync scripts, binaries and assets"
rsync $RSYNC_OPTIONS bin target public $REMOTE:$REMOTE_DIR

lilalog "Restart lila4"
ssh $REMOTE "service lila4 restart"

lilalog "Deploy complete"

sleep 2

curl_prod
