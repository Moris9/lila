# App XHR
GET   /ping                             controllers.AppXhrC.ping
GET   /sync/:gameId/:color/:version     controllers.AppXhrC.syncPublic(gameId: String, color: String, version: Int)
GET   /sync/:gameId/:color/:version/:fullId controllers.AppXhrC.sync(gameId: String, color: String, version: Int, fullId: String)
GET   /how-many-players-now             controllers.AppXhrC.nbPlayers
GET   /how-many-games-now               controllers.AppXhrC.nbGames
POST  /move/:fullId                     controllers.AppXhrC.move(fullId: String)
GET   /abort/:fullId                    controllers.AppXhrC.abort(fullId: String)
GET   /resign/:fullId                   controllers.AppXhrC.resign(fullId: String)
GET   /resign-force/:fullId             controllers.AppXhrC.forceResign(fullId: String)
GET   /draw-claim/:fullId               controllers.AppXhrC.drawClaim(fullId: String)
POST  /outoftime/:fullId                controllers.AppXhrC.outoftime(fullId: String)
GET   /draw-accept/:fullId              controllers.AppXhrC.drawAccept(fullId: String)
GET   /draw-offer/:fullId               controllers.AppXhrC.drawOffer(fullId: String)
GET   /draw-cancel/:fullId              controllers.AppXhrC.drawCancel(fullId: String)
GET   /draw-decline/:fullId             controllers.AppXhrC.drawDecline(fullId: String)
POST  /talk/:fullId                     controllers.AppXhrC.talk(fullId: String)
POST  /moretime/:fullId                 controllers.AppXhrC.moretime(fullId: String)
GET   /ai                               controllers.AppXhrC.ai

# App Private API
GET   /api/show/:fullId            controllers.AppApiC.show(fullId: String)
