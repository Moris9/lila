{
  "include": ["src/*.ts", "src/*.js", "dts/*.d.ts"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "target": "es5",
    "lib": ["DOM", "ES5", "ES2015.Promise"]
  }
}
