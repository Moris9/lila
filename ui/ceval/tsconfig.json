{
  "include": ["src/*.ts", "test/*.ts"],
  "exclude": [],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "target": "es5",
    "lib": ["DOM", "ES5", "ES2015.Promise"]
  }
}
